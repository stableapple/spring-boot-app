pipeline {
    agent {
        docker {
            image 'ri25/maven-docker:latest'
            // Keep your root user args
            args '-v /var/run/docker.sock:/var/run/docker.sock -u 0:0'
        }
    }
    
    options {
        // This prevents the automatic checkout before the pipeline starts
        skipDefaultCheckout()
    }

    stages {
        stage('Checkout') {
            steps {
                // Now you will see this in the logs
                sh 'echo "Starting Checkout Stage..." '
                
                script {
                    // Fix for "fatal: not in a git directory" due to ownership
                    sh 'git config --global --add safe.directory "*"'
                }
                
                // Use the built-in checkout command
                checkout scm
                
                sh 'echo "Passed checkout"'
            }
        }

        stage('Build and Test') {
            steps {
                sh '''
                    ls -ltr
                    mvn clean package
                '''
            }
        }

    stage('Static Code Analysis') {
      environment {
        SONAR_URL = "http://34.201.116.83:9000"
      }
      steps {
        withCredentials([string(credentialsId: 'sonarqube', variable: 'SONAR_AUTH_TOKEN')]) {
          sh 'cd java-maven-sonar-argocd-helm-k8s/spring-boot-app && mvn sonar:sonar -Dsonar.login=$SONAR_AUTH_TOKEN -Dsonar.host.url=${SONAR_URL}'
        }
      }
    }
    stage('Build and Push Docker Image') {
      environment {
        DOCKER_IMAGE = "abhishekf5/ultimate-cicd:${BUILD_NUMBER}"
        // DOCKERFILE_LOCATION = "java-maven-sonar-argocd-helm-k8s/spring-boot-app/Dockerfile"
        REGISTRY_CREDENTIALS = credentials('docker-cred')
      }
      steps {
        script {
            sh 'cd java-maven-sonar-argocd-helm-k8s/spring-boot-app && docker build -t ${DOCKER_IMAGE} .'
            def dockerImage = docker.image("${DOCKER_IMAGE}")
            docker.withRegistry('https://index.docker.io/v1/', "docker-cred") {
                dockerImage.push()
            }
        }
      }
    }

        stage('Update Deployment File') {
            steps {
                withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
                    // Use the env variable for workspace consistency
                    dir("${env.WORKSPACE}") {
                        sh '''
                            git config --global --add safe.directory "*"
                            git config user.email "riddhi01.menon@gmail.com"
                            git config user.name "stableapple"
                            git add deployment.yml
                            git commit -m "Update deployment image to version ${BUILD_NUMBER}" || echo "No changes to commit"
                            git push https://${GITHUB_TOKEN}@github.com/stableapple/spring-boot-app.git HEAD:master
                        '''
                    }
                }
            }
        }
    }
}
