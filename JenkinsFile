pipeline {
    agent {
        docker {
            image 'ri25/maven-docker:latest'
            // Keep your root user args
            args '-v /var/run/docker.sock:/var/run/docker.sock -u 0:0'
        }
    }
    
    options {
        // This prevents the automatic checkout before the pipeline starts
        skipDefaultCheckout()
    }

    stages {
        stage('Checkout') {
            steps {
                // Now you will see this in the logs
                sh 'echo "Starting Checkout Stage..." '
                
                script {
                    // Fix for "fatal: not in a git directory" due to ownership
                    sh 'git config --global --add safe.directory "*"'
                }
                
                // Use the built-in checkout command
                checkout scm
                
                sh 'echo "Passed checkout"'
            }
        }

        stage('Build and Test') {
            steps {
                sh '''
                    ls -ltr
                    mvn clean package
                '''
            }
        }

        // ... rest of your stages ...

        stage('Update Deployment File') {
            steps {
                withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
                    // Use the env variable for workspace consistency
                    dir("${env.WORKSPACE}") {
                        sh '''
                            git config --global --add safe.directory "*"
                            git config user.email "riddhi01.menon@gmail.com"
                            git config user.name "stableapple"
                            git add deployment.yml
                            git commit -m "Update deployment image to version ${BUILD_NUMBER}" || echo "No changes to commit"
                            git push https://${GITHUB_TOKEN}@github.com/stableapple/spring-boot-app.git HEAD:master
                        '''
                    }
                }
            }
        }
    }
}
